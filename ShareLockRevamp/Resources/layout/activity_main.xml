<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:background="@drawable/roundedcornerwhite"
        android:layout_width="match_parent"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/toolbar1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/relativeLayout1">
            <ImageView
                    android:src="@drawable/logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/logo" />
                <TextView
                    android:text="SaveLocks"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/usernameTxt" />
                <ImageView
                android:src="@drawable/profilelogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/profileBtn" />
                

        </RelativeLayout>
        

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:id="@+id/homeLayout">
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/homelayout"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/profileLayout">
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/profilelayout"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/EditDoorLayout">
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/editdoorlock"/>
    </LinearLayout>
    
    



</LinearLayout>