<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Edit DoorLock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#38A3DC"
        android:textSize="25sp"
        android:gravity="center"
        android:id="@+id/textView1" /> 
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColorHint="#38A3DC"
        android:backgroundTint="#38A3DC"
        android:hint="Enter Door Lock ID"
        android:id="@+id/doorLockId"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColorHint="#38A3DC"
        android:backgroundTint="#38A3DC"
        android:hint="Enter Door Lock Name"
        android:id="@+id/doorlockName"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColorHint="#38A3DC"
        android:backgroundTint="#38A3DC"
        android:hint="Enter Door Password"
        android:id="@+id/doorLockPassword"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColorHint="#38A3DC"
        android:backgroundTint="#38A3DC"
        android:hint="Enter Address"
        android:id="@+id/doorLockAddress"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColorHint="#38A3DC"
        android:backgroundTint="#38A3DC"
        android:hint="Enter Family/Owner Name"
        android:id="@+id/familyOwner"/>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1" >
        <Button
        android:text="Save Changes"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="#38A3DC"
        android:layout_marginRight="10dp"
        android:background="@drawable/roundedcornerwhite"
        android:id="@+id/EditDoorLockButton" />
        <Button
        android:text="Delete"
        android:layout_width="150dp"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:background="@drawable/accentedbutton"
        android:id="@+id/DeleteDoorLockButton" />
    </LinearLayout>

    
</LinearLayout>
